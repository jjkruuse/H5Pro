@{
    ViewBag.Title = "Home Page";
}

<fieldset>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div id="imageCarousel" class="carousel slide" data-interval="5000"
                     data-ride="carousel" data-pause="hover" data-wrap="true">

                    <ol class="carousel-indicators">
                        <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#imageCarousel" data-slide-to="1"></li>
                        <li data-target="#imageCarousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Images/pb.jpg" class="img-responsive">
                            <div class="carousel-caption">
                                <h3>Peaky Blinders</h3>
                                <p style="font-weight: bold; font-size:small">Følg familen Shelby som deres bande vokser i Burminghams undergrund.</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/Images/mam1.jpg" class="img-responsive">
                            <div class="carousel-caption">
                                <h3>Making a Murderer</h3>
                                <p style="font-weight: bold; font-size:small">Dokumentar med fokus på drab</p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/Images/RickMorty.jpg" class="img-responsive">
                            <div class="carousel-caption">
                                <h3>Rick & Morty</h3>
                                <p style="font-weight: bold; font-size:small">Mørk sci-fi komedie</p>
                            </div>
                        </div>
                    </div>

                    <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>

            </div>
        </div>
    </div>
</fieldset>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}